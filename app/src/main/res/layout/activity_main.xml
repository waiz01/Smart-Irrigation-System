<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"

    >


    <ImageView
        android:layout_width="270dp"
        android:layout_height="270dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/logo"></ImageView>


    <View
        android:id="@+id/dividerh"
        style="@style/Dividerh"
        android:layout_centerVertical="true"
        />

    <View
        android:id="@+id/dividerv"
        style="@style/Dividerv"
        android:layout_marginLeft="230dp"
        />


    <TextView
        android:id="@+id/txtrain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rain Status:"
        android:textSize="20dp"
        android:layout_marginLeft="30dp"
        android:layout_below="@+id/dividerh"
        android:textStyle="bold"
        />

    <TextView
        android:id="@+id/txtpump"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Water Pump Status:"
        android:textSize="20dp"
        android:paddingTop="20dp"
        android:layout_marginLeft="30dp"
        android:layout_below="@+id/txtrain"
        android:textStyle="bold"
        />

    <TextView
        android:id="@+id/txtsoil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Soil Moisture Level:"
        android:textSize="20dp"
        android:paddingTop="20dp"
        android:layout_marginLeft="30dp"
        android:layout_below="@+id/txtpump"
        android:textStyle="bold"
        />

    <TextView
        android:id="@+id/rainSensorTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="rain"
        android:textSize="20dp"
        android:layout_alignStart="@+id/dividerv"
        android:layout_below="@+id/dividerh"
        android:textStyle="bold"
        />

    <TextView
        android:id="@+id/waterPumpStatusTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="pump"
        android:textSize="20dp"
        android:paddingTop="20dp"
        android:layout_alignStart="@+id/dividerv"
        android:layout_below="@+id/rainSensorTextView"
        android:textStyle="bold"
        />

    <TextView
        android:id="@+id/soilMoistureTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="soil"
        android:textSize="20dp"
        android:paddingTop="20dp"
        android:layout_alignStart="@+id/dividerv"
        android:layout_below="@+id/waterPumpStatusTextView"
        android:textStyle="bold"
        />




</RelativeLayout>